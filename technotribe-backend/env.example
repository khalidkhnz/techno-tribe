# ===========================================
# TechnoTribes Backend Environment Variables
# ===========================================

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development
PORT=5000
API_PREFIX=api
API_VERSION=v1

# ===========================================
# Database Configuration
# ===========================================
# MongoDB Connection String
# Local Development
MONGODB_URI=mongodb://localhost:27017/TechnoTribes

# Production Example (MongoDB Atlas)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/TechnoTribes?retryWrites=true&w=majority

# MongoDB Options
MONGODB_OPTIONS_MAX_POOL_SIZE=10
MONGODB_OPTIONS_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_OPTIONS_SOCKET_TIMEOUT_MS=45000

# ===========================================
# JWT Authentication Configuration
# ===========================================
# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Token Expiration
JWT_ACCESS_TOKEN_EXPIRES_IN=1h
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# JWT Issuer and Audience (Optional)
JWT_ISSUER=TechnoTribes
JWT_AUDIENCE=TechnoTribes-users

# ===========================================
# Security Configuration
# ===========================================
# Password Hashing
BCRYPT_SALT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5000
CORS_CREDENTIALS=true

# ===========================================
# Email Configuration (Future Use)
# ===========================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Templates
EMAIL_FROM=noreply@TechnoTribes.com
EMAIL_VERIFICATION_URL=http://localhost:5000/verify-email

# ===========================================
# Social Authentication (Future Use)
# ===========================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_CALLBACK_URL=http://localhost:5000/auth/linkedin/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:5000/auth/github/callback

# ===========================================
# File Upload Configuration (Future Use)
# ===========================================
# File Upload Limits
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Storage Configuration
STORAGE_PROVIDER=local
STORAGE_PATH=./uploads
CLOUD_STORAGE_BUCKET=TechnoTribes-uploads

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE=logs/app.log

# ===========================================
# Monitoring & Analytics (Future Use)
# ===========================================
# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn

# Analytics
ANALYTICS_ENABLED=false
ANALYTICS_TRACKING_ID=your-tracking-id

# ===========================================
# Cache Configuration (Future Use)
# ===========================================
# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache TTL
CACHE_TTL=3600

# ===========================================
# Queue Configuration (Future Use)
# ===========================================
# Bull Queue Configuration
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=
QUEUE_REDIS_DB=1

# ===========================================
# Feature Flags
# ===========================================
# Enable/Disable Features
FEATURE_EMAIL_VERIFICATION=false
FEATURE_SOCIAL_LOGIN=false
FEATURE_FILE_UPLOAD=false
FEATURE_RATE_LIMITING=true
FEATURE_LOGGING=true

# ===========================================
# Development Configuration
# ===========================================
# Debug Mode
DEBUG=true
DEBUG_NAMESPACE=TechnoTribes:*

# Hot Reload
HOT_RELOAD=true

# ===========================================
# Production Configuration
# ===========================================
# Production Settings (Override in production)
PRODUCTION_URL=https://api.TechnoTribes.com
FRONTEND_URL=https://TechnoTribes.com

# SSL Configuration
SSL_ENABLED=false
SSL_KEY_PATH=./ssl/private.key
SSL_CERT_PATH=./ssl/certificate.crt

# ===========================================
# Testing Configuration
# ===========================================
# Test Database
TEST_MONGODB_URI=mongodb://localhost:27017/TechnoTribes-test
TEST_JWT_SECRET=test-jwt-secret

# ===========================================
# Documentation
# ===========================================
# Swagger Configuration
SWAGGER_TITLE=TechnoTribes API
SWAGGER_DESCRIPTION=The TechnoTribes developer recruitment platform API
SWAGGER_VERSION=1.0
SWAGGER_PATH=api

# ===========================================
# Notes
# ===========================================
# 1. Copy this file to .env and update values as needed
# 2. Never commit .env file to version control
# 3. Use different values for development, staging, and production
# 4. Keep secrets secure and rotate them regularly
# 5. Use environment-specific .env files (.env.development, .env.production) 